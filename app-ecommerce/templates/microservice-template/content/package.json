{
  "name": "@ecommerce/${{ values.name }}",
  "version": "1.0.0",
  "description": "${{ values.description }}",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "build": "echo 'Build step for Node.js service'",
    "health": "curl -f http://localhost:${{ values.port }}/health",
    "migrate": "node src/scripts/migrate.js",
    "seed": "node src/scripts/seed.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    {% if values.hasAuth %}
    "jsonwebtoken": "^9.0.2",
    "express-jwt": "^8.4.1",
    {% endif %}
    {% if values.hasValidation %}
    "joi": "^17.11.0",
    {% endif %}
    {% if values.hasMetrics %}
    "prom-client": "^15.0.0",
    {% endif %}
    {% if values.database == "postgresql" %}
    "pg": "^8.11.3",
    "sequelize": "^6.34.0",
    {% endif %}
    {% if values.database == "mongodb" %}
    "mongoose": "^7.6.3",
    {% endif %}
    {% if values.hasCache or values.database == "redis-only" %}
    "redis": "^4.6.10",
    {% endif %}
    {% if values.hasSwagger %}
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    {% endif %}
    "http-status-codes": "^2.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "@babel/preset-env": "^7.23.2",
    "babel-jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/company/ecommerce-platform.git",
    "directory": "services/${{ values.name }}"
  },
  "keywords": [
    "microservice",
    "ecommerce",
    "nodejs",
    "enterprise",
    "${{ values.database }}"
  ],
  "author": "${{ values.owner }}",
  "license": "MIT"
}