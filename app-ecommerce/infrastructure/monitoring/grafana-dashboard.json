{
  "dashboard": {
    "id": null,
    "title": "E-commerce Platform - Overview",
    "tags": ["ecommerce", "microservices", "overview"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Service Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\".*-service|api-gateway\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate (req/sec)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time (P95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (service, le))",
            "legendFormat": "{{service}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (service) / sum(rate(http_requests_total[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(pg_stat_database_numbackends) by (datname)",
            "legendFormat": "PostgreSQL - {{datname}}"
          },
          {
            "expr": "mongodb_connections{state=\"current\"}",
            "legendFormat": "MongoDB - Current"
          }
        ]
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "{{job}} - Memory (MB)"
          }
        ]
      },
      {
        "id": 7,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "{{job}} - CPU %"
          }
        ]
      },
      {
        "id": 8,
        "title": "Active Users (Last 24h)",
        "type": "stat",
        "targets": [
          {
            "expr": "count(increase(user_login_total[24h]))",
            "legendFormat": "Active Users"
          }
        ]
      },
      {
        "id": 9,
        "title": "Orders Created (Today)",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(orders_created_total[24h])",
            "legendFormat": "Orders Today"
          }
        ]
      },
      {
        "id": 10,
        "title": "Revenue (Today)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(payment_amount_total[24h]))",
            "legendFormat": "Revenue USD"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}