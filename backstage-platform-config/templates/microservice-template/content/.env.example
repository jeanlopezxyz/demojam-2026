# ${{ values.name | title }} Service Environment Variables
# Copy this file to .env and update with your actual values

# Service Configuration
NODE_ENV=development
PORT=${{ values.port }}
APP_VERSION=1.0.0
SERVICE_NAME=${{ values.name }}

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

{% if values.database == "postgresql" %}
# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=${{ values.name | replace("-", "_") }}
DB_USER=postgres
DB_PASSWORD=password
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE=10000
DB_LOGGING=false
{% endif %}

{% if values.database == "mongodb" %}
# MongoDB Database
MONGODB_URL=mongodb://localhost:27017/${{ values.name | replace("-", "_") }}
MONGODB_POOL_SIZE=10
MONGODB_TIMEOUT=5000
{% endif %}

{% if values.hasCache or values.database == "redis-only" %}
# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
{% endif %}

# External Services
USER_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:3002
ORDER_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_URL=http://localhost:3004
INVENTORY_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3006

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Business Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
CACHE_TTL=3600
REQUEST_TIMEOUT=30000

# Monitoring (Optional)
PROMETHEUS_METRICS=true
GRAFANA_DASHBOARD_URL=http://localhost:3001

# Development Tools
DEBUG_MODE=false
ENABLE_SWAGGER=true